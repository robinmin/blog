---
import "@fontsource-variable/inter";
import { SEO } from "astro-seo";
import { SITE } from "@/config";
import Navbar from "@/components/navbar.astro";
import Footer from "@/components/Footer.astro";
import { checkImageUrl } from "@/utils/all";

export interface Props {
	title?: string;
	desc?: string;
	ogimage?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const { title, desc, ogimage = "/opengraph.jpg" } = Astro.props;

const resolvedOGImage = checkImageUrl(ogimage, Astro.site);

const makeTitle = title
	? `${title} | ${SITE.title}`
	: `${SITE.title} â€” ${SITE.desc}`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={makeTitle}
      description={desc || SITE.desc}
      canonical={canonicalURL}
      twitter={{
        creator: "@/surjithctly",
        site: "@/web3templates",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: makeTitle,
          image: resolvedOGImage,
        },
        image: {
          alt: "Stablo Screenshot",
        },
      }}
    />
    {
      SITE.googleAnalyticsId && (
        <>
          <script
            is:inline
            async
            src={`https://www.googletagmanager.com/gtag/js?id=${SITE.googleAnalyticsId}`}
          ></script>
          <script is:inline define:vars={{ gaId: SITE.googleAnalyticsId }}>
            window.dataLayer = window.dataLayer || [];
            function gtag() {
              dataLayer.push(arguments);
            }
            gtag("js", new Date());
            gtag("config", gaId);
          </script>
        </>
      )
    }
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
