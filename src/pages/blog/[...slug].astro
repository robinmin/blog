---
import { Picture } from "astro:assets";
import { type CollectionEntry, getCollection, render } from "astro:content";
import Container from "@/components/container.astro";
import ImageLightbox from "@/components/ImageLightbox.astro";
import Label from "@/components/ui/label.astro";
import { getCategoryData } from "@/data/category";
import Layout from "@/layouts/Layout.astro";
import { getFormattedDate } from "@/utils/all";
import { slugifyStr } from "@/utils/slugify";

type Props = CollectionEntry<"blog">;

export async function getStaticPaths() {
	const posts = await getCollection("blog");
	return posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}

const post = Astro.props;

const { Content } = await render(post);

const category = getCategoryData(post.data.category || "");
---

<Layout
  title={post.data.title}
  desc={post.data.excerpt}
  ogimage={
    typeof post.data.image === "string"
      ? post.data.image
      : post.data.image?.src
  }>
  <Container>
    <div class="max-w-screen-lg mx-auto">
      <h1
        class="mt-2 text-3xl font-semibold tracking-tight text-brand-primary lg:text-4xl dark:text-white">
        {post.data.title}
      </h1>

      <div class="flex flex-col items-center mt-4 text-sm md:grid md:grid-cols-[1fr_3fr_1fr] w-full gap-4 md:gap-0">
        <div class="md:text-left order-1">
           <Label theme={category.color}>{category.title}</Label>
        </div>

        <div class="flex justify-center gap-2 flex-wrap order-3 md:order-2">
           {post.data.tags.length > 0 && post.data.tags.map((tag) => (
              <a href={`/tags/${slugifyStr(tag)}`} class="text-xs bg-gray-200 dark:bg-gray-700 text-gray-600 dark:text-gray-300 px-2 py-1 rounded-full hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">
                #{tag}
              </a>
           ))}
        </div>
        
        <div class="md:text-right order-2 md:order-3">
          <time
            class="text-gray-500 dark:text-gray-400"
            datetime={post.data.publishDate?.toISOString()}>
            {getFormattedDate(post.data.publishDate)}
          </time>
        </div>
      </div>
    </div>
  </Container>

  {
    post.data.image && (
      <div class="relative z-0 max-w-screen-lg mx-auto overflow-hidden lg:rounded-lg aspect-video mt-6">
        {typeof post.data.image === "string" ? (
          <img
            src={post.data.image}
            alt="Thumbnail"
            loading="eager"
            class="w-full"
          />
        ) : (
          <Picture
            src={post.data.image}
            widths={[200, 400, 800]}
            sizes="(max-width: 640px) 90vw, 480px"
            width={1024}
            height={576}
            alt="Thumbnail"
            loading="eager"
            class="w-full"
          />
        )}
      </div>
    )
  }

  <Container>
    <article class="max-w-screen-lg mx-auto">
      <div
        class="mx-auto my-3 prose prose-base max-w-none dark:prose-invert prose-a:text-blue-600">
        <Content />


      </div>

      <div class="flex justify-center mt-7 mb-7">
        <a
          href="/"
          class="px-5 py-3 text-sm text-blue-600 transition rounded-md dark:bg-gray-700 dark:text-white bg-blue-50 hover:bg-blue-100">
          ‚Üê View all posts
        </a>
      </div>
    </article>
      </div>
    </article>
  </Container>
  <ImageLightbox />
</Layout>
