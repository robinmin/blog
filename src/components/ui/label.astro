---
import cx from "classnames";

interface Props {
	theme?: "green" | "blue" | "orange" | "purple" | "pink" | "gray";
	class?: string;
}

const color = {
	green: "text-emerald-700",
	blue: "text-blue-600",
	orange: "text-orange-700",
	purple: "text-purple-600",
	pink: "text-pink-600",
	gray: "text-gray-500",
};

const { theme = "pink", class: className } = Astro.props;
---

<span
  class={cx(
    "inline-block mt-5 text-xs font-medium tracking-wider uppercase ",
    color[theme] || color.pink,
    className
  )}>
  <slot />
</span>
