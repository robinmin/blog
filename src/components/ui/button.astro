---
interface Props {
	size?: "md" | "lg";
	block?: boolean;
	style?: "outline" | "primary" | "inverted";
	class?: string;
	// biome-ignore lint/suspicious/noExplicitAny: Prop delegation
	[x: string]: any;
}

const {
	size = "md",
	style = "primary",
	block,
	class: className,
	...rest
} = Astro.props;

const _sizes = {
	md: "px-5 py-2.5",
	lg: "px-6 py-3",
};

const _styles = {
	outline: "border-2 border-black hover:bg-black text-black hover:text-white",
	primary:
		"bg-black text-white hover:bg-gray-900  border-2 border-transparent dark:bg-white dark:text-black",
};
---

<button
  {...rest}
  class:list={[
    "rounded text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200",
    block && "w-full",
    _sizes[size],
    _styles[style],
    className,
  ]}
  ><slot />
</button>
