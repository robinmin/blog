---
import { FRIENDS } from "@/config";
---

{
  FRIENDS.length > 0 && (
    <aside class="fixed top-1/2 right-4 z-50 hidden -translate-y-1/2 xl:block">
      <div class="flex flex-col gap-3 rounded-lg border border-skin-line bg-skin-fill/90 p-4 shadow-lg backdrop-blur-sm transition-all hover:bg-skin-fill">
        <h3 class="text-sm font-semibold tracking-wide text-skin-accent uppercase">
          Friends
        </h3>
        <ul class="flex flex-col gap-2">
          {FRIENDS.map((friend) => (
            <li>
              <a
                href={friend.url}
                target="_blank"
                rel="noopener noreferrer"
                class="group flex items-center gap-2 hover:text-skin-accent"
                title={friend.description}
              >
                {friend.avatar && (
                  <img
                    src={friend.avatar}
                    alt={friend.name}
                    class="size-6 rounded-full"
                  />
                )}
                <span class="text-sm font-medium decoration-dashed underline-offset-4 group-hover:underline">
                  {friend.name}
                </span>
              </a>
            </li>
          ))}
        </ul>
      </div>
    </aside>
  )
}
