---
import { FRIENDS } from "@/config";
---

{
  FRIENDS.length > 0 && (
    <aside class="fixed top-1/2 right-4 z-50 hidden -translate-y-1/2 xl:block">
      <div class="flex flex-col gap-3 rounded-lg border border-skin-line bg-skin-fill/90 p-4 shadow-lg backdrop-blur-sm transition-all hover:bg-skin-fill">
        <h3 class="flex items-center gap-2 text-sm font-semibold tracking-wide text-skin-accent uppercase">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4">
             <path stroke="none" d="M0 0h24v24H0z" fill="none" />
             <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
             <path d="M9 10l.01 0" />
             <path d="M15 10l.01 0" />
             <path d="M9.5 15a3.5 3.5 0 0 0 5 0" />
          </svg>
          Friends
        </h3>
        <ul class="flex flex-col gap-2">
          {FRIENDS.map((friend) => (
            <li>
              <a
                href={friend.url}
                target="_blank"
                rel="noopener noreferrer"
                class="group flex items-center gap-2 hover:text-skin-accent"
                title={friend.description}
              >
                {friend.avatar && (
                  <img
                    src={friend.avatar}
                    alt={friend.name}
                    class="size-6 rounded-full"
                  />
                )}
                <span class="text-sm font-medium decoration-dashed underline-offset-4 group-hover:underline">
                  {friend.name}
                </span>
              </a>
            </li>
          ))}
        </ul>
      </div>
    </aside>
  )
}
